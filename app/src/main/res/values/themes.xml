<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SimpleCommon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar_color</item>
        <item name="colorPrimaryDark">@color/action_bar_color</item>
        <item name="colorAccent">@color/action_bar_color</item>

    </style>

    <style name="Theme.SimpleCommon" parent="Base.Theme.SimpleCommon" />
    
    <style name="SimpleCommon.Toolbar.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/action_bar_color</item>
        <item name="colorPrimaryDark">@color/action_bar_color</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="titleTextAppearance">@style/SimpleCommon.Toolbar.TitleText</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white</item>

    </style>

    <style name="SimpleCommon.Toolbar.TitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>

    </style>

    <style name="SimpleCommon.Toolbar.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="overlapAnchor">false</item>
    </style>




</resources>